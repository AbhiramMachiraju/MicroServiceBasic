spring:
      application:
         name: API-GATEWAY
   cloud:
        gateway:
		        routes:
		        - id: ORDER-SERVICE
		          uri: lb://ORDER-SERVICE
		          predicates:
		            - Path=/order/**
		          filters:
		            - name: CircuitBreaker
		              args:
		                name: ORDER-SERVICE
		                fallbackuri: forward:/orderFallback
		        - id: PAYMENT-SERVICE
		          uri: lb://PAYMENT-SERVICE
		          predicates:
		            - Path=/payment/**
		          filters:
		            - name: CircuitBreaker
		              args:
		                name: PAYMENT-SERVICE
		                fallbackuri: forward:/paymentFallback
		 
                  
management:
  endpoints:
    web:
      exposure:
        include: hystrix.stream

hystrix:
  command:
    fallbackcmd:
      execution:
        isolation:
          thread:
            timeoutInMilliseconds: 5000  
            
            eureka:
    client:
        fetch-registry: true
        instance:
            hostname: localhost
        register-with-eureka: true
        service-url:
            defaultZone: http://localhost:8761/eureka/
server:
    port: 9100
            
            