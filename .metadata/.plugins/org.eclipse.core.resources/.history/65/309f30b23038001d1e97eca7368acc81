eureka:
    client:
        fetch-registry: true
        instance:
            hostname: localhost
        register-with-eureka: true
        service-url:
            defaultZone: http://localhost:8761/eureka/
server:
    port: 9100
    
spring:
    application:
        name: API-GATEWAY
    cloud:
        gateway:
            routes:
            -   id: ORDER-SERVICE
                uri: lb://ORDER-SERVICE
                predicates:
                    - Path=/order/**
              
                
            -   id: PAYMENT-SERVICE
                uri: lb://PAYMENT-SERVICE
                predicates:
                - Path=/payment/**